<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_weight="1"
    android:padding="10dp">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/ring"
        android:textSize="30dp"
        android:background="@drawable/radius"
        android:textColor="@color/white"
        android:padding="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="20dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:padding="20dp"
                android:background="@drawable/tmplogo"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/tmpIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="20dp"
                android:text="a"
                android:textSize="30dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:padding="20dp"
                android:background="@drawable/tmplogo"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tmpOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="a"
                android:textSize="30dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="20dp"
                android:background="@drawable/HmdLogo"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/hmdOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:padding="20dp"
                android:text="a"
                android:textSize="30dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/lightMenu"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Out"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/switchOut"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:theme="@style/SCBSwitch"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Kitchen"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/switchKitchen"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:theme="@style/SCBSwitch" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bedroom"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/switchBedroom"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:theme="@style/SCBSwitch" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/windowMenu"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Left"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/switchLeft"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:theme="@style/SCBSwitch"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Right"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/switchRight"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:theme="@style/SCBSwitch" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"

        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-1dp">

            <ImageButton
                android:id="@+id/lightbulb"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/roundbutton"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lightbulb_img" />

            <ImageButton
                android:id="@+id/door"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/roundbutton"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/door_img" />

            <ImageButton
                android:id="@+id/window"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roundbutton"
                android:baselineAligned="false"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/window_img" />


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>